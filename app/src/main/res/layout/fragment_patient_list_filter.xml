<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/patient_filter_title"
            style="@style/FilteringTitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filtering"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/item_filter_new"
            style="@style/LargeBlackTextStyle"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checked="false"
            android:text="New"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/patient_filter_title" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/item_filter_discharged"
            style="@style/LargeBlackTextStyle"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checked="false"
            android:text="@string/discharged"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_filter_new" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/item_filter_in_hospice"
            style="@style/LargeBlackTextStyle"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checked="false"
            android:text="@string/in_hospice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_filter_discharged" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/patient_list_filter_ok_material_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@android:string/ok" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/patient_filter_cancel_material_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="@color/filtering_claim_title_text_color"
            app:strokeColor="@color/filtering_claim_title_text_color"
            app:strokeWidth="2dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>

