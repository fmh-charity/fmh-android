<?xml version="1.0" encoding="UTF-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_wish"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:strokeColor="#A10114"
    app:strokeWidth="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/card_view_padding"
        android:paddingTop="@dimen/card_view_padding"
        android:paddingEnd="@dimen/card_view_padding"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/name_label_text_view"
            style="@style/card_label_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ФИО"
            app:layout_constraintBottom_toTopOf="@+id/divider1_image_view"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/name_text_view"
            style="@style/card_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toTopOf="@+id/divider1_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/name_label_text_view"
            tools:text="В.Ю.Сорокин" />

        <ImageView
            android:id="@+id/divider1_image_view"
            style="@style/card_divider_style"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="-16dp"
            android:layout_marginEnd="-16dp"
            android:background="#A10114"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_label_text_view"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/birth_date_label_text_view"
            style="@style/card_label_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birth_date"
            app:layout_constraintBottom_toTopOf="@+id/divider2_image_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider1_image_view"

            />

        <TextView
            android:id="@+id/birth_date_text_view"
            style="@style/card_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toTopOf="@+id/divider2_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/birth_date_label_text_view"
            app:layout_constraintTop_toBottomOf="@id/divider1_image_view"
            tools:text="10.04.1946" />

        <ImageView
            android:id="@+id/divider2_image_view"
            style="@style/card_divider_style"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="-16dp"
            android:layout_marginEnd="-16dp"
            android:background="#A10114"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/birth_date_text_view"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/status_label_text_view"
            style="@style/card_label_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider2_image_view"
            />

        <TextView
            android:id="@+id/status_text_view"
            style="@style/card_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/status_label_text_view"
            app:layout_constraintTop_toBottomOf="@id/divider2_image_view"
            tools:text="Новый" />

        <ImageView
            android:id="@+id/divider4_image_view"
            style="@style/card_divider_style"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="-16dp"
            android:layout_marginEnd="-16dp"
            android:background="#A10114"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_text_view"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_between_elements"
            android:src="@drawable/ic_gray_triangle_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider4_image_view"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>